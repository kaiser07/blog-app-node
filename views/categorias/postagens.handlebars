<h1>{{categoria.nome}}</h1>
{{#each postagens}}

    <div class="card mt-4">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <p>{{descricao}}</p>




            <a href="/postagem/{{slug}}" class="btn btn-info">Saiba mais</a>
            <hr>
            
            <small>Data de publicação: {{data}}</small>
            
        </div>
    </div>
{{else}}
    <div class="card">
        <div class="card-body">
            <h4>Não há postagens no momento.</h4>
        </div>
    </div>

{{/each}}